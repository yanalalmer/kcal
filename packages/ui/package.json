{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./src/components/index.ts",
  "types": "./src/components/index.ts",
  "exports": {
    ".": {
      "types": "./src/components/index.ts",
      "default": "./src/components/index.ts"
    },
    "./components": {
      "types": "./src/components/index.ts",
      "default": "./src/components/index.ts"
    },
    "./utils": {
      "types": "./src/lib/utils.ts",
      "default": "./src/lib/utils.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "build": "tailwindcss -i ./src.css -o ./dist/styles.css --minify",
    "build:watch": "tailwindcss -i ./src.css -o ./dist/styles.css --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json}'",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check '**/*.{js,jsx,ts,tsx,css,md,json}'"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint": "^9.39.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0"
  }
}
